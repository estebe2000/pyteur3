# Image légère de base
FROM ubuntu:22.04

# Installer curl et dépendances
RUN apt-get update && apt-get install -y curl sudo

# Installer Ollama via le script officiel
RUN curl -fsSL https://ollama.com/install.sh | sh

# Exposer le port par défaut
EXPOSE 11434

# Commande par défaut : démarrer Ollama
CMD ["ollama", "serve"]
